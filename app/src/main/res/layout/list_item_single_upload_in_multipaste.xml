<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:background="@color/colorTextLight">

    <ImageView
        android:id="@+id/imgMultiPasteSingleItemThumb"
        android:layout_width="@dimen/gridImageSize"
        android:layout_height="@dimen/gridImageSize"
        android:src="@color/colorPrimary" />

    <TextView
        android:id="@+id/txtMultiPasteSingleItemName"
        android:layout_width="@dimen/gridImageSize"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgMultiPasteSingleItemThumb"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimaryDarkHalfTransparent"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:lines="1"
        android:padding="2dp"
        android:text="name"
        android:textColor="@color/colorTextLight"
        android:textSize="8sp" />

</RelativeLayout>