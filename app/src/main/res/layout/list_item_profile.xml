<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <TextView
        android:id="@+id/lblProfileUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/user_name" />

    <TextView
        android:id="@+id/txtProfileUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_name"
        android:layout_marginEnd="24dp"/>

    <!-- not used in v1.0. Would be nice for later versions though, also displaying a
    different color for api key level / permissions associated with the apikey :) -->
    <ImageView
        android:id="@+id/imgHasApiKey"
        android:layout_width="24dp"
        android:layout_height="24dp" />
</LinearLayout>